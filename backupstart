#!/bin/bash

LOGF="/video/Incoming/logs/backupmaster.log"

if mountpoint -q /video
then

 DT=`date +%m/%d/%y" "%l:%M%P`
 echo "`eval date +%m/%d/%y"-"%H:%M` ---> Backup script starting" >> $LOGF

RUNCHECK1=`ps uxa | grep "backup.exec" | wc -l`

 if [[ $RUNCHECK1 < 2 ]]; then
   screen -dm bash -c "/opt/galaxymediatools/backupscripts/backup.exec"
  else
   echo "`eval date +%m/%d/%y"-"%H:%M` Backup already running.  Not executing another session." >> $LOGF
   exit 1
  fi
 else
  echo "`eval date +%m/%d/%y"-"%H:%M` Backup already running.  Not executing another session." >> $LOGF
  exit 1
 fi
echo "`eval date +%m/%d/%y"-"%H:%M` Video NFS Share NOT MOUNTED!! Exiting." >> $LOGF
